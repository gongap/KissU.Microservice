    <PackageReference Include="KissU.Modules.PermissionManagement.DbMigrator" Version="1.0.0-preview-2020082204" />
    <PackageReference Include="KissU.Modules.SettingManagement.DbMigrator" Version="1.0.0-preview-2020082204" />
    <PackageReference Include="KissU.Modules.TenantManagement.DbMigrator" Version="1.0.0-preview-2020082204" />
